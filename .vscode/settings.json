{
  // Workspace override: keep automation shell interactive for tasks/agents.
  // Avoid embedding `-Command ...` here because VS Code will supply its own command when running tasks.
  "terminal.integrated.automationProfile.windows": {
    "path": "pwsh.exe",
    "args": [
      "-NoLogo",
      "-NoProfile",
      "-ExecutionPolicy",
      "Bypass"
    ]
  }
}
